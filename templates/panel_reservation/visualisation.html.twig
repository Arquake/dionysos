{% extends 'base.html.twig' %}

{% block title %}Dionysos - Checkout Complete{% endblock %}

{% block body %}

    <div>
        {% include 'staffNavBar.html.twig' %}

        <div class="grid grid-cols-3 mt-12 text-white">

            <div class="col-start-2 col-span-1 bg-slate-600 rounded-lg p-8">
                <div class="mb-6 text-lg">Réservation n°{{ reservation.idReservation }}</div>

                <div class="grid grid-cols-4 gap-4 mb-8">
                    <div class="py-2 col-span-4">{{ reservation.nom }} {{ reservation.prenom }}</div>
                    <div class="py-2 col-span-2">email : {{ reservation.email }}</div>
                    <div class="py-2 col-span-2">téléphone : {{ reservation.telephone }}</div>
                    <div class="py-2 col-span-2">date de reservation : {{ reservation.dateReservation | date('d-m-Y') }} {{ reservation.horraire | date('h:i') }}</div>
                    <div class="py-2 col-span-2">date du règlement : {{ reservation.date | date('d-m-Y') }}</div>
                    <div class="py-2 col-span-3">nombre de couverts : {{ reservation.couverts }}</div>
                </div>

                <div class="divide-y-2">
                    <div class="p-2 grid grid-cols-8">
                        <div class="col-span-6">Article</div>
                        <div class="col-span-1">Quantité</div>
                        <div class="col-span-1">Prix Unitaire</div>
                    </div>
                    {% for item in reservation.articles %}
                        <div class="p-2 grid grid-cols-8">
                            <div class="col-span-6">{{ item.nom }}</div>
                            <div class="col-span-1">{{ item.quantite }}</div>
                            <div class="col-span-1">{{ item.prix }} €</div>
                        </div>
                    {% endfor %}
                    <div class="p-2 grid grid-cols-8">
                        <div class="col-span-7">Total</div>
                        <div class="col-span-1">{{ reservation.total }} €</div>
                    </div>
                </div>

                <div class="p-2 grid grid-cols-8">
                    <a class="col-start-7 col-span-2 bg-white rounded text-slate-700 text-center p-2 font-xl mt-2" href="/panel-reservation">Fermer</a>
                </div>
            </div>
        </div>

    </div>
{% endblock %}
{% extends 'base.html.twig' %}

{% block title %}Dionysos - Checkout Complete{% endblock %}

{% block body %}

    <div>
        {% include 'staffNavBar.html.twig' %}
        <div class="min-h-screen p-8 bg-blue-50">
            <div class="grid grid-cols-5 text-white">

                <div class="lg:col-start-2 lg:col-span-3 col-span-full bg-slate-600 rounded-lg p-8">
                    <div class="mb-6 text-lg">Encaissement n°{{ encaissement.id }}</div>

                    <div class="grid grid-cols-4 gap-4 mb-8">
                        <div class="py-2 col-span-4">couverts : {{ encaissement.couverts }}</div>
                        <div class="py-2 col-span-2">Crénau : {% if encaissement.midi %} Midi {% else %} Dîner {% endif %}</div>
                        <div class="py-2 col-span-2">date du règlement : {{ encaissement.date | date('d-m-Y') }}</div>
                    </div>

                    <div class="divide-y-2">
                        <div class="p-2 grid grid-cols-8">
                            <div class="col-span-4 2xl:col-span-6">Article</div>
                            <div class="col-span-2 2xl:col-span-1">Quantité</div>
                            <div class="col-span-2 2xl:col-span-1">Prix Unitaire</div>
                        </div>
                        {% for item in encaissement.article %}
                            <div class="p-2 grid grid-cols-8">
                                <div class="col-span-4 2xl:col-span-6">{{ item.nom }}</div>
                                <div class="col-span-2 2xl:col-span-1">{{ item.quantite }}</div>
                                <div class="col-span-2 2xl:col-span-1">{{ item.prix }} €</div>
                            </div>
                        {% endfor %}
                        <div class="p-2 grid grid-cols-8">
                            <div class="col-span-7">Total</div>
                            <div class="col-span-1">{{ encaissement.total }} €</div>
                        </div>
                    </div>

                    <div class="p-2 grid grid-cols-8">
                        <a class="col-start-7 col-span-2 bg-white rounded text-slate-700 text-center p-2 font-xl mt-2" href="/panel-reservation">Fermer</a>
                    </div>
                </div>
            </div>
        </div>
    </div>
{% endblock %}